<?xml version="1.0" encoding="utf-8"?>
<layer-list

    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="16"
            android:useLevel="false">
            <solid android:color="@color/greyclose" />
            <corners android:radius="20dip" />

        </shape>

    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="16"
                android:useLevel="true">
                <corners android:radius="20dip" />

                <gradient
                    android:endColor="@color/game_green"
                    android:centerColor="@color/game_green"
                    android:startColor="@color/game_green" />
            </shape>
        </rotate>
    </item>

</layer-list>