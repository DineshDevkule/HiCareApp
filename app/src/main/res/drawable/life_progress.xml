<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/transparent_more_black"
                android:centerColor="@color/transparent_blacke"
                android:centerY="1.0"
                android:endColor="@color/transparent_more_black"
                android:angle="270"
                />
            <corners android:radius="8dp"/>

            <stroke
                android:width="1dp"
                android:color="@color/black"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/outerGreen"
                    android:centerColor="@color/barGreenLight"
                    android:centerY="1.0"
                    android:endColor="@color/barGreenLight"
                    android:angle="270"
                    />
                <corners android:radius="8dp"/>
                <stroke
                    android:width="1dp"
                    android:color="@color/black"
                    />
            </shape>
        </clip>
    </item>
</layer-list>