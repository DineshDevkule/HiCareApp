    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/lnrType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/chemical_cells"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/serviceArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="10sp"
                android:singleLine="true" />


        </LinearLayout>

        <TextView
            android:id="@+id/subTypeTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:background="@drawable/chemical_cells"
            android:ellipsize="end"
            android:padding="5dp"
            android:text="Refill changed?"
            android:textColor="@color/black"
            android:gravity="center"
            android:singleLine="true" />

        <TextView
            android:id="@+id/chem_consumption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/chemical_cells"
            android:ellipsize="end"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/black"
            android:padding="5dp"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/lnrCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/chemical_cells"
            android:ellipsize="end"
            android:padding="5dp"
            android:layout_weight="0.9">
            <EditText
                android:id="@+id/countEt"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:inputType="number"
                android:textSize="15dp"
                android:digits="0123456789"
                android:focusableInTouchMode="true"
                android:layout_gravity="center"
                android:descendantFocusability="beforeDescendants"
                android:textColor="@color/black"
                android:background="@drawable/edit_border"
                android:focusable="true"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrCapture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@drawable/chemical_cells"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="5dp"
            android:singleLine="true">
            <ImageView
                android:id="@+id/img_capture"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:text="@string/service_plan"
                android:layout_gravity="center"
                android:src="@drawable/ic_addimage" />
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>