<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    android:id="@+id/dataCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/barcodeIv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/barcodeIv"
            android:layout_toLeftOf="@id/imgs"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/barcodeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234567"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="4dp"/>

            <LinearLayout
                android:layout_below="@id/linear"
                android:id="@+id/equipmentTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/equipmentTypeLabel"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Equipment"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/equipmentTypeTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/equipmentTypeLayout"
                android:id="@+id/serviceUnitLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/serviceUnit"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Service Unit"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/serviceUnitTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/linear"
                android:id="@+id/verifiedOnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/verifiedOnLabel"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="Verified"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/verifiedOnTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="2"
                        android:text="At 14:50 on September 2021"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/naBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:text="Not Accessible"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/imgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="delete"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_toLeftOf="@id/isBarcodeVerified"
                android:src="@drawable/ic_trash_round_red"
                />
            <ImageView
                android:id="@+id/isBarcodeVerified"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_check_circle_green"
                />
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
