<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tms.TmsThirdChildFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_centerInParent="true">


        <TextView
            android:id="@+id/txtPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="RECOMMENDATIONS"
            android:textColor="@color/lightRed"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imgAlert"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/infestation_alert"
            android:layout_toRightOf="@id/txtPart"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp">
            <ImageView
                android:id="@+id/speakerIv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_speaker"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="visible"/>
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorSize="14dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            android:layout_below="@id/txtPart"
            android:text="About Inspection"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomLayout"
            android:layout_below="@id/txtPart"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            tools:listitem="@layout/layout_recommendations_adapter" />

        <TextView
            android:id="@+id/txtEmpty"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:text="No results found!" />

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/lnrBottom"
            android:layout_marginBottom="10dp">


            <CheckBox
                android:id="@+id/chkAgree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I agree &amp; understand to use the chemicals as recommended"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/noteTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:text="Note: Please view all images to enable the continue button"
                android:textColor="@color/red"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_border"
                android:text="BACK"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.6"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_border"
                android:text="CONTINUE"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>