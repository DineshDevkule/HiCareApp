<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/dataCard"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/md_red_50"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/indexTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20sp"
                android:layout_centerVertical="true" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileIv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/indexTv"
                android:src="@drawable/ic_user"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/profileIv"
                android:layout_toLeftOf="@id/imgs"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/userNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shahid Raza Ansari"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="4dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_below="@id/linear"
                    android:id="@+id/verifiedOnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/levelNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level : Basic"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/imgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="delete"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_toLeftOf="@id/isBarcodeVerified"
                    android:src="@drawable/ic_trash_round_red" />
                <TextView
                    android:id="@+id/pointsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1500 pts"
                    android:maxEms="5"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/isBarcodeVerified"/>
                <ImageView
                    android:id="@+id/awardIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_award_silver" />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>