<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuizResultActivity">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingBottom="18dp">
                <RelativeLayout
                    android:id="@+id/imageView6"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/imgOffer"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/offer_poster" />


                </RelativeLayout>

            <TextView
                android:id="@+id/levelUpgrdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@id/imageView6"
                android:fontFamily="@font/roboto_bold"
                android:text="LEVEL UPGRADE!"
                android:textColor="@color/red"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                android:visibility="gone"/>

                <TextView
                    android:id="@+id/messageTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_below="@id/levelUpgrdTv"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Congratulations!"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="@+id/levelUpgrdTv"
                    app:layout_constraintStart_toStartOf="@+id/levelUpgrdTv"
                    app:layout_constraintTop_toBottomOf="@+id/levelUpgrdTv" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/shiksha_total_score"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/messageTv"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/messageTv"
                    app:layout_constraintStart_toStartOf="@id/messageTv"
                    app:layout_constraintTop_toBottomOf="@id/messageTv" />

                <TextView
                    android:id="@+id/scoreTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="8/10"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/textView8"
                    android:textColor="@android:color/black"
                    android:textSize="36sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="POINTS EARNED"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/scoreTv"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/scoreTv"
                    app:layout_constraintStart_toStartOf="@+id/scoreTv"
                    app:layout_constraintTop_toBottomOf="@+id/scoreTv" />

                <TextView
                    android:id="@+id/earnedCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_coin_reward"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="500"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/textView13"
                    android:textColor="@android:color/black"
                    android:textSize="36sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView13"
                    app:layout_constraintStart_toStartOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <RelativeLayout
                    android:id="@+id/currLevelLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/earnedCoins"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    app:layout_constraintBottom_toTopOf="@+id/restartBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scoreTv">

                    <TextView
                        android:id="@+id/currLevelTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/shiksha_level"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/currLevelTitleTv"
                        android:layout_centerHorizontal="true">
                        <RelativeLayout
                            android:id="@+id/badgeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:id="@+id/imgBadge"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/ic_award_silver" />

                        </RelativeLayout>
                        <TextView
                            android:id="@+id/currLevelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/badgeLayout"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginStart="6dp"
                            android:text="HUNHAR"
                            android:textColor="@android:color/black"
                            android:textSize="28sp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>


                </RelativeLayout>

                <Button
                    android:id="@+id/restartBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/button_1_green"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/currLevelLayout"
                    android:text="Finish"
                    android:textColor="@color/white"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/currLevelLayout" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>