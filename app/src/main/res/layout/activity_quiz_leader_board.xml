                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="12sp" />


                        <LinearLayout
                            android:id="@+id/lnrFirstPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_below="@id/txtFirstCentre"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/leader_board_round"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                app:srcCompat="@drawable/ic_coin_reward" />

                            <TextView
                                android:id="@+id/txtFirstPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="7dp"
                                android:ellipsize="end"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtFirstMissed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lnrFirstPoints"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/red"
                            android:textSize="10sp"
                            android:visibility="gone" />

                    </RelativeLayout>


                </RelativeLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgFirst"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/imgCrown"
                    android:layout_centerHorizontal="true"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    android:src="@drawable/ic_profile" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgFirst"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgFirstBadge"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/ic_award_gold" />

                    <TextView
                        android:id="@+id/txtFirstRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:text="1"
                        android:visibility="gone"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgCrown"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-9dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_crown" />


            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/curve_bg">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_quiz_leaderboard" />

        </LinearLayout>
    </LinearLayout>
